<div class="BoxListPost" style="margin-top: 100px;">
    <h1 class="TitleGray">postagens:</h1>
    <a href="/admin/postagens/nova"><button class="buttonSubmit">Nova postagem</button></a>
</div>
{{#each postagens}}
    <div class="boxPostagens">
        <img src="/{{imagem}}" style="height: 50px; width: 50px;">
        <h2>{{titulo}}</h2>
        <small>{{data}}</small>
        <p>{{conteudo}}</p>
        <div class="BoxButton-Posts">
            <a href="/admin/postagens/edit/{{_id}}"><button class="buttonSubmit">Editar</button></a>
            <a href="/admin/postagens/delete/{{_id}}"><button class="buttonDelete">Deletar</button></a>
        </div>
    </div>
{{else}}
    <p>nenhuma postagem ainda</p>
{{/each}}