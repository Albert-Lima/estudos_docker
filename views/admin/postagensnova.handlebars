<div class="BoxNewPost">
    <h4>nova postagem:</h4>
    <form action="/admin/postagens/nova" method="post" enctype="multipart/form-data">
        <label for="imagem">Capa</label>
        <input type="file" name="imagem" id="">
        <label for="titulo" class="labelFor">titulo:</label>
        <input type="text" name="titulo">
        <label for="slug" class="labelFor">slug:</label>
        <input type="text" name="slug">
        <label for="descricao" class="labelFor">descrição:</label>
        <input type="text" name="descricao">
        <label for="conteudo" class>conteúdo:</label>
        <textarea name="conteudo" id="" cols="30" rows="10"></textarea>
        <label for="categoria">categoria:</label>
        <select name="categoria" id="">
            {{#each categorias}}
                <option value="{{_id}}">{{nomeCategoria}}</option>
            {{else}}
                <option value="0">nenhuma categoria registrada</option>
            {{/each}}
        </select>
        <button type="submit">criar postagem</button>
    </form>
</div>
{{>_footer}}